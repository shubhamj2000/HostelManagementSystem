                $('#CreateModal').fadeIn(800);
                $('#CreateModal').modal('show');
            },
            error: function () {
                alert("Dynamic content load failed.");
            },
        });
    }






    function GetData(id) {
        $.ajax({
            type: "GET",
            url: "/Home/Details",
            data: { "Id": id },
            success: function (data) {
                debugger;
                $('#myModalContent').html(data);
                //$('#myModal').modal(options);
                $('#myModal' ).fadeIn(800);
                $('#myModal').modal('show');

            },
            error: function () {
                alert("Dynamic content load failed.");
            },


        });
    }


